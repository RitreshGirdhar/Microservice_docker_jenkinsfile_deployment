version: "2"
services:

  CustomAPI:
    image: {{ IMAGE }}:{{ IMAGE_VERSION }}
    restart: on-failure
    tty: true
    mem_limit: {{ MEMORY_LIMIT }}
    mem_reservation: {{ MEMORY_RESERVATION }}
    ports:
      - 8080:8080
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
    environment:
    networks:
      - Network_{{ PROJECT_NAME }}

networks:
  Network_{{ PROJECT_NAME }}: